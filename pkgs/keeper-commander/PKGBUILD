pkgname=keeper-commander
pkgver=17.2.9
pkgrel=1
epoch=1
pkgdesc="CLI, SDK and interactive shell for KeeperÂ® Password Manager."
arch=('any')
url="https://github.com/Keeper-Security/Commander"
license=('MIT')
depends=('python'
    'python-asciitree'
    'python-bcrypt'
    'python-colorama'
    'python-prompt_toolkit'
    'python-pycryptodomex'
    'python-pyperclip'
    'python-tabulate'
    'python-fido2'
    'python-requests'
    'keeper-secrets-manager-core>=16.6.0'
    'python-protobuf'
    'python-cryptography'
    'python-pydantic'
    'python-flask-limiter'
    'python-pyngrok'
    'python-dotenv'
    'python-psutil'
    'python-websockets'
    'python-textual'
    'python-flask'
    'python-certifi'
)
optdepends=(
    'python-fpdf2: PDF export support'
    'python-pysocks: SOCKS proxy support'
    'python-aiortc: WebRTC support'
    'google-crc32c: Cloud integration support'
    'python-pykeepass: KeePass support'
    'python-ldap3: LDAP support'
    'python-botocore: AWS support'
    'python-paramiko: SSH/SFTP support'
    'python-pexpect: Automation support'
    'python-google-auth: Google auth support'
    'python-boto3: AWS SDK support'
    'python-yaml: YAML support'
    'python-google-api-python-client: Google API support'
)
makedepends=(
    'python-installer'
    'python-build'
    'python-setuptools'
    'python-setuptools-scm'
)
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
sha512sums=('e74c129409731a2b5edcd5dade36407373865a9ae53852e61c097a9530ff12869e1b46883829ec4423008ef26d9e17f5558f475788bcf2fa8583e03bf2217da9')

build() {
    cd "Commander-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "Commander-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
    install -D -m644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
